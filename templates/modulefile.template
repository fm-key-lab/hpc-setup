#%Module
##
## {APP} (v{VERSION})

proc ModulesHelp { } {
   puts stderr "
Adds {APP} to your path
Version: {VERSION}
"
}

module-whatis "Adds {APP} to your path\n"
module-whatis "Provides: {APP}"

set basedir [getenv "MODULE_BASEDIR"]
if { $basedir eq "" } {
    puts stderr "Error: MODULE_BASEDIR environment variable is not set."
    exit 1
}
prepend-path PATH "${basedir}/{APP}/{VERSION}{EXE_REL_PATH}"